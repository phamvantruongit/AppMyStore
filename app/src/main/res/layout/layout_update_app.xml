<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:background="@drawable/boder_item_top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="300dp">
    <TextView
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvTitle01"
        android:padding="7dp"
        android:text="I have released a new version of MyStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvTitle02"
        android:padding="5dp"
        android:gravity="center"
        android:text="with new features"
        app:layout_constraintTop_toBottomOf="@id/tvTitle01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:gravity="center"
        android:text="Do you want to update ?"
        app:layout_constraintTop_toBottomOf="@id/tvTitle02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  <LinearLayout
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tvGoto"
          android:textColor="@color/white"
          android:background="@color/colorPrimary"
          android:textStyle="bold"
          android:gravity="center"
          android:padding="9dp"
          android:text="Now"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
      <TextView
          android:id="@+id/tvAfter"
          android:textStyle="bold"
          android:textColor="@color/red"
          android:background="@color/colorPrimary"
          android:layout_marginLeft="5dp"
          android:gravity="center"
          android:padding="9dp"
          android:text="After"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
  </LinearLayout>
</android.support.constraint.ConstraintLayout>