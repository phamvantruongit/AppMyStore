<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view4"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tvAbout"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:text="About MyStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvAbout">

        <ImageView
            android:id="@+id/imgHome11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgHome11"
            android:text="Share" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rl11">

        <ImageView
            android:id="@+id/imgHome12"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgHome12"
            android:text="Feeback" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>