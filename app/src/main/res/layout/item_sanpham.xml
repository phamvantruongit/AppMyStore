<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@drawable/border_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="@dimen/_15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/tv_tensp"
        android:text="Ten san pham:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:text="hihih"
        android:textSize="@dimen/_15sp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/black"
        android:id="@+id/tvtensp"
        app:layout_constraintLeft_toRightOf="@id/tv_tensp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black"
        android:id="@+id/tv_TTSanPham"
        android:layout_marginTop="5dp"
        android:text=" San pham chat luong cao  san pham chat luong cao  san pham chat luong cao  san pham chat luong cao  san pham chat luong cao san pham chat luong cao"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/tv_tensp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tv_GiaSP"
        android:text="Danh mục:"
        app:layout_constraintTop_toBottomOf="@id/tv_TTSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/_15sp"
        android:id="@+id/tvDanhMuc"
        android:textColor="@color/black"
        android:text="Quan áo"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_GiaSP"
        app:layout_constraintTop_toBottomOf="@id/tv_TTSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tv_SizeSP"
        android:text="Size:"
        app:layout_constraintTop_toBottomOf="@id/tv_GiaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:textSize="@dimen/_15sp"
        android:id="@+id/tvSizeSP"
        android:textColor="@color/black"
        android:text="S"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_SizeSP"
        app:layout_constraintTop_toBottomOf="@id/tvDanhMuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tv_SLSP"
        android:text="So luong:"
        app:layout_constraintTop_toBottomOf="@id/tv_SizeSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/_15sp"
        android:id="@+id/tvSLSP"
        android:textColor="@color/black"
        android:text="10"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_SLSP"
        app:layout_constraintTop_toBottomOf="@id/tvSizeSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:visibility="gone"
        android:id="@+id/ckbox"
        app:layout_constraintTop_toBottomOf="@+id/tvtensp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="italic"
        android:textSize="@dimen/_13sp"
        android:id="@+id/tvGia"
        android:textColor="@color/red"
        android:text="Giá : 10.000.000"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tensp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        app:layout_constraintTop_toBottomOf="@id/tv_SLSP"
        android:layout_marginTop="13dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>