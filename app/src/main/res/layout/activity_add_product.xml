<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivityAddProduct">


    <TableLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TableRow>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Danh mục" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2" />
        </TableRow>

        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Mã vạch" />

            <EditText
                android:id="@+id/edMaVach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:enabled="false"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </TableRow>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvQuetMaVach"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_item_top"
                android:gravity="center"
                android:padding="5dp"
                android:text="Quét mã vạch"
                android:textColor="@color/black" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvTaoMaVach"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvQuetMaVach"
                android:background="@drawable/boder_item_top"
                android:gravity="center"
                android:padding="5dp"
                android:text="Tạo mã vạch"
                android:textColor="@color/black" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvDowload"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/boder_item_top"
                android:gravity="center"
                android:padding="5dp"
                android:text="Tải "
                android:textColor="@color/black" />
        </RelativeLayout>

        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Tên sản phẩm" />

            <EditText
                android:textColor="@color/black"
                android:id="@+id/edTenSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:padding="5dp" />
        </TableRow>

        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Giá nhập" />

            <EditText
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/edGiaNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Giá bán" />

            <EditText
                android:textColor="@color/red"
                android:id="@+id/edGiaBan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>


        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Số lượng" />

            <EditText
                android:id="@+id/edSoLuong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:textColor="@color/black"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Size" />

            <EditText
                android:textColor="@color/black"
                android:id="@+id/edSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:id="@+id/btnThemMoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm mới" />

            <Button
                android:layout_marginLeft="10dp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:id="@+id/btnHuyBo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Làm mới" />
        </TableRow>
    </TableLayout>

</RelativeLayout>