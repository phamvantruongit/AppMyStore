<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.activity.ActivityAddProduct">

    <LinearLayout
        android:id="@+id/ln"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tvQuetMaVach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/boder_item_top"
            android:gravity="center"
            android:padding="5dp"
            android:text="Quét mã vạch"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTaoMaVach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/boder_item_top"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tạo mã vạch"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/boder_item_top"
            android:gravity="center"
            android:padding="5dp"
            android:text="Dowload"
            android:textColor="@color/black" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Mã vạch" />

            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/edMaVach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:enabled="false"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black" />

            <ImageView
                android:onClick="OpenQrcode"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barcode" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Tên sản phẩm" />

            <EditText
                android:id="@+id/edTenSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:padding="5dp" />
        </TableRow>


        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Danh mục" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:background="@color/gray" />


        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Giá nhập" />

            <EditText
                android:id="@+id/edGiaNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:maxLength="20"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Giá bán" />

            <EditText
                android:id="@+id/edGiaBan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:maxLength="20"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>


        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Số lượng" />

            <EditText
                android:id="@+id/edSoLuong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Size" />

            <EditText
                android:id="@+id/edSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boder_item_top"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>

    </TableLayout>
    <View
        android:id="@+id/view"
        android:layout_margin="10dp"
        android:layout_below="@id/tb"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.google.android.gms.ads.AdView
        android:visibility="gone"
        android:layout_below="@id/view"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adUnitId="@string/banner_home_footer"/>

    <LinearLayout
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <Button
            android:id="@+id/btnThemMoi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm mới" />

        <Button
            android:id="@+id/btnHuyBo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy bỏ" />
    </LinearLayout>
</RelativeLayout>