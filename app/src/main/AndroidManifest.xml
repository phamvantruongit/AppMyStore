<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.com.phamtruongit.appmystore">

    <application
        android:name=".ApplicationMyStore"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ActivityAddProduct"
            android:theme="@style/AppThemeNoActionBar"
            />
        <activity
            android:name=".view.HomeActivity"
            android:label="@string/title_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CategoryActivity"
            android:label="@string/title_category" />
        <activity
            android:theme="@style/AppThemeNoActionBar"
            android:name=".view.ProductActivity"
            />
        <activity
            android:name=".view.MoreActivity"
            android:label="@string/title_more" />
        <activity android:name=".TestActivity"></activity>
    </application>

</manifest>