<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.com.phamtruongit.appmystore">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".ApplicationMyStore"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ActivityAddProduct"
            android:theme="@style/AppThemeNoActionBar"
            />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.HomeActivity"
            android:label="@string/title_home">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".view.CategoryActivity"
            android:label="@string/title_category" />
        <activity
            android:label="@string/title_products"
            android:screenOrientation="portrait"
            android:name=".view.ProductActivity"
            />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.MoreActivity"
            android:label="@string/title_more" />
        <activity android:name=".view.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>